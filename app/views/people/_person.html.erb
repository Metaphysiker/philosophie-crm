<p class="card-text">
    <b>Name:</b> <%= link_to "#{person.firstname} #{person.lastname}", person_path(person) %>
</p>
<p class="card-text">
    <b>Login:</b> <%= link_to person.login, person_path(person) %>
</p>
<p class="card-text">
    <b>e-Mail:</b> <%= mail_to person.email %>
</p>

<p>
  <a class="btn btn-link btn-sm" data-toggle="collapse" href="#note-<%= person.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
    <%= fa_icon "sticky-note" %> Notizen anzeigen
  </a>

  <a class="btn btn-link btn-sm" data-toggle="collapse" href="#task-<%= person.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
    <%= fa_icon "tasks" %>  Aufgaben anzeigen
  </a>

</p>
<div class="collapse mb-2" id="note-<%= person.id %>" %>
  <h3 class="card-title">Notizen: </h3>
  <div class="card card-body mb-1">

    <% if person.notes.empty? %>
      Keine Notizen vorhanden.
    <% else %>
      <%= render partial: "notes/note", collection: person.notes, as: :note %>
    <% end %>
  </div>

  <div class="card card-body mb-1">
    <p>
      <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#note-<%= person.id %>-new">
        <%= fa_icon "plus" %>  Notiz hinzuf√ºgen
      </button>
    </p>
    <div class="collapse" id="note-<%= person.id %>-new">
      <%= render "notes/form", note: Note.new, parent: person %>   <%#= render "notes/form", note: Note.new, parent: person %>
    </div>
  </div>
</div>

<div class="collapse" id="task-<%= person.id %>" %>
  <h3 class="card-title">Aufgaben: </h3>
  <div class="card card-body mb-1">
    <% if person.notes.empty? %>
      Keine Aufgaben vorhanden.
    <% else %>
      <%= render partial: "notes/note", collection: person.notes, as: :note %>
    <% end %>
  </div>
</div>

<hr>
