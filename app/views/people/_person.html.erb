<p class="card-text">
    <b>Name:</b> <%= link_to "#{person.firstname} #{person.lastname}", person_path(person) %>
</p>
<p class="card-text">
    <b>Login:</b> <%= link_to person.login, person_path(person) %>
</p>
<p class="card-text">
    <b>e-Mail:</b> <%= mail_to person.email %>
</p>

<% unless person.institutions.empty? %>
  <p> <b>Ist Mitglied bei:</b>
    <ul>
    <% person.institutions.each do |institution| %>
      <li><button type="button" class="btn btn-link"><%= institution.name %></button></li>
    <% end %>
  </ul>
  </p>
<% end %>

<% unless person.tag_list.empty? %>
  <p>
    <% person.tag_list.each do |tag| %>
      <button type="button" class="btn btn-outline-dark m-1"><%= tag %></button>
    <% end %>
  </p>
<% end %>

<p>
  <a class="btn btn-link btn-sm" data-toggle="collapse" href="#notes-<%= person.id %>-<%= person.class.to_s.downcase %>" role="button" aria-expanded="false" aria-controls="collapseExample">
    <%= fa_icon "sticky-note" %> Notizen anzeigen
  </a>

  <a class="btn btn-link btn-sm" data-toggle="collapse" href="#tasks-<%= person.id %>-<%= person.class.to_s.downcase %>" role="button" aria-expanded="false" aria-controls="collapseExample">
    <%= fa_icon "tasks" %>  Aufgaben anzeigen
  </a>

</p>

<div class="collapse mb-2" id="notes-<%= person.id %>-<%= person.class.to_s.downcase %>" %>
  <%= render "notes/notes_of_a_thing", parent: person %>
</div>

<div class="collapse" id="tasks-<%= person.id %>-<%= person.class.to_s.downcase %>" %>
  <%= render "tasks/tasks_of_a_thing", parent: person %>
</div>

<hr>
