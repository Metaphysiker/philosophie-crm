var div_id = "#task-<%= @task.id %>";

$( div_id ).fadeOut( "slow", function() {

    x = $("<%= escape_javascript( render "tasks/task", task: @task, parent: @task.taskable ) %>");

    $(div_id).replaceWith(function(){
      return $(x).hide().fadeIn("slow");
    });

    $(div_id).children( ".card").addClass("checked_task");

});
